#include <stdio.h>

int main() {
    float N1, N2, N3, N4, exam, media, finalMedia;

    scanf("%f %f %f %f", &N1, &N2, &N3, &N4);

    media = (N1*2 + N2*3 + N3*4 + N4*1) / 10.0;

    printf("Media: %.1f\n", media);

    if (media >= 7.0) {
        printf("Aluno aprovado.\n");
    }
    else if (media < 5.0) {
        printf("Aluno reprovado.\n");
    }
    else {  
        // Media between 5.0 and 6.9 â†’ Exam needed
        printf("Aluno em exame.\n");
        scanf("%f", &exam);
        printf("Nota do exame: %.1f\n", exam);

        finalMedia = (media + exam) / 2.0;

        if (finalMedia >= 5.0) {
            printf("Aluno aprovado.\n");
        } else {
            printf("Aluno reprovado.\n");
        }

        printf("Media final: %.1f\n", finalMedia);
    }

    return 0;
}
