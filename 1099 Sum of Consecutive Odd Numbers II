#include <stdio.h>

int main() {
    int N;
    scanf("%d", &N);

    while (N--) {
        int X, Y;
        scanf("%d %d", &X, &Y);

        int sum = 0;
        int start, end;

        if (X < Y) {
            start = X;
            end = Y;
        } else {
            start = Y;
            end = X;
        }

        for (int i = start + 1; i < end; i++) {
            if (i % 2 != 0) {
                sum += i;
            }
        }

        printf("%d\n", sum);
    }

    return 0;
}
